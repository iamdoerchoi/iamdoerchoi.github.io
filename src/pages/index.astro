	}

	.recent-posts a {
		text-decoration: none;
		color: inherit;
		display: block;
		transition: transform 0.2s ease;
	}

	.recent-posts a:hover {
		transform: translateX(4px);
	}

	.post-item h3 {
		font-size: 1.5em;
		margin-bottom: 0.3em;
		color: rgb(var(--accent));
	}

	.post-item .date {
		font-size: 0.9em;
		color: rgb(var(--gray));
		margin-bottom: 0.5em;
	}

	.post-item .description {
